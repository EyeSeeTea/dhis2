<script>
    var workflowUid = '$workflow.uid';
</script>

<h3>$i18n.getString( "edit_approval_workflow" ) #openHelp( "systemApprovalSettings" )</h3>

<form id="addApprovalWorkflowForm" class="inputForm">
    <input type="hidden" id="approvalLevelCount" name="approvalLevelCount" value="$dataApprovalLevels.size()" />
    <table>
        <tr>
            <th colspan="2">$i18n.getString( "details" )</th>
        </tr>
        <tr>
            <td><label>$i18n.getString( "name" ) <em title="$i18n.getString( 'required' )" class="required">*</em></label></td>
            <td><input type="text" id="name" name="name" value="$!encoder.htmlEncode( $workflow.name )"/></td>
        </tr>
        <tr>
            <td><label>$i18n.getString( "frequency" ) <em title="$i18n.getString( 'required' )" class="required">*</em></label></td>
            <td>
                <select id="frequency" name="frequency">
                    #foreach ( $periodType in $periodTypes )
                        <option value="$periodType.name" #if( $workflow.periodType.name.equals( $periodType.name ) ) selected="selected" #end>$i18n.getString( $periodType.name )</option>
                    #end
                </select>
            </td>
        </tr>
        #foreach( $level in $dataApprovalLevels )
        <tr>
            <td><label>$level.level - $encoder.htmlEncode( $level.displayName )</label></td>
            <td>
                <select id="approvalLevel$level.level" name="approvalLevel$level.level">
                    <option value="">$i18n.getString( "no" )</option>
                    <option value="$level.uid" #if( $workflow.levels.contains( $level ) ) selected="selected" #end>$i18n.getString( "yes" )</option>
                </select>
            </td>
        </tr>
        #end
        <tr>
            <td></td>
            <td>
                <input type="button" value="$i18n.getString( "save" )" onclick="javascript:editApprovalWorkflow()" style="width:10em" />
                <input type="button" value="$i18n.getString( "cancel" )" onclick="window.location.href='systemApprovalWorkflows.action'" style="width:10em" />
            </td>
        </tr>
    </table>
</form>
