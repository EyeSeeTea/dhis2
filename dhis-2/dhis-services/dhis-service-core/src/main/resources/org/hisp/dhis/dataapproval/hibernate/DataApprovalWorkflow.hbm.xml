<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">]
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.dataapproval.DataApprovalWorkflow" table="dataapprovalworkflow">

    <cache usage="read-write" />
    
    <id name="id" column="dataapprovalworkflowid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="true" length="230" />

    <set name="members" table="dataapprovalworkflowmembers">
      <cache usage="read-write" />
      <key column="dataapprovalworkflowid" foreign-key="fk_dataapprovalworkflowmembers_dataapprovalworkflowid" />
      <many-to-many class="org.hisp.dhis.dataapproval.DataApprovalLevel" column="dataapprovallevelid"
                    foreign-key="fk_dataapprovalworkflow_dataapprovallevelid" />
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_dataapprovalworkflow_userid" />

    <property name="publicAccess" length="8" />

    <set name="userGroupAccesses" table="dataapprovalworkflowusergroupaccesses">
      <cache usage="read-write" />
      <key column="dataapprovalworkflowid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" column="usergroupaccessid" unique="true" />
    </set>

    </class>
</hibernate-mapping>
